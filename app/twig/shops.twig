{% extends "layouts/app.twig" %}

{% block pageTitle %}ХлебПром{% endblock %}

{% block content %}
    <!-- Header block -->
    {% include "layouts/header.twig" %}
    <!-- Header block end -->
    <div class="contacts">
        <div class="container">
            <div class="">
                <div class="">
                    <div class="fw-pt-20 fw-pb-20">
                        {% include "partials/breadcrumbs.twig" %}
                    </div>

                    <div class="fw-pt-10 fw-mb-50">
                        <div class="fw-block fw-color-dark-text fw-fz-60 fw-font-ml wow fadeInUp"
                             data-wow-offset="200" data-wow-duration="2s"
                             data-wow-delay=".25s">
                            Где купить
                        </div>

                        <div class="fw-grid fw-grid-50 fw-flex fw-flex-middle fw-mt-35">
                            <div class="fw-width-1-4">
                                <input type="text" placeholder="поиск по почтовому индексу или городу" class="form__text-input fw-text-uppercase">
                            </div>
                            <div class="fw-width-1-4">
                                <select class="nice-select form__select">
                                    <option value="">СТАНЦИЯ МЕТРО</option>
                                </select>
                            </div>
                            <div class="fw-width-1-4">
                                <a href="#" class="fw-font-msb fw-text-uppercase fw-reset fw-color-pale-yellow fw-text-underline-hover">Показать все</a>
                            </div>
                        </div>

                        <div class="fw-grid fw-grid-50 fw-flex fw-mt-50">
                            <div class="fw-width-1-4 fw-flex">
                                <div class="fw-relative fw-flex-grow-1">
                                    <div class="custom-scrollbar fw-absolute fw-left-0 fw-top-0 fw-width-1-1 fw-height-1-1" style="height: 740px;">
                                        {% for i in 1..50 %}
                                            <div class="shops-map__item fw-padding-30 fw-pl-40 fw-pr-40 fw-hover-bg-color-light-pale-yellow js-toggle-item">
                                                <div class="fw-fz-30 fw-font-ml fw-flex fw-flex-middle fw-flex-space-between js-toggle-header">
                                                    <div>Перекресток</div>
                                                    <div class="fw-flex-shrink-no fw-ml-20">
                                                        <i class="icon-custom-arrow-down"></i>
                                                    </div>
                                                </div>
                                                <div class="fw-fz-18 fw-line-height-1-7 fw-mt-15">
                                                    <div>Думская ул., 4</div>
                                                    <div>Санкт-Петербург 191011</div>
                                                </div>
                                                <div class="fw-color-pale-yellow fw-mt-15 fw-line-height-2 fw-fz-16 fw-hidden js-toggle-body">
                                                    <div>Время работы: Круглосуточно</div>
                                                    <div>Телефон: <a href="tel:8 (495) 504-34-78" class="fw-reset fw-color-pale-yellow fw-text-underline-hover">8 (495) 504-34-78</a></div>
                                                </div>
                                            </div>
                                        {% endfor %}
                                    </div>
                                </div>
                            </div>
                            <div class="fw-width-3-4">
                                <div id="shops-map" class="shops-map"></div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        {% include 'partials/scroll-top.twig' %}
    </div>

    <!-- footer block -->
    {% include "layouts/footer.twig" %}
    <!-- footer block end -->
{% endblock %}