{% extends "layouts/app.twig" %}

{% block pageTitle %}Scan&amp;Go. Делаю покупки еще быстрее – Система самостоятельного сканирования товаров{% endblock %}

{% block content %}
    <!-- Header block -->
    {% include "layouts/header.twig" %}
    <!-- Header block end -->

    <div class="first-screen">
        <div class="container">
            <div class="d-flex">
                <div class="col d-flex align-items-center justify-content-center">
                    <div class="d-flex">
                        <div>
                            <a href="#" class="fw-reset first-screen__button">
                                <i class="icon icon-create-resume"></i>
                                <div class="fw-ml-10">
                                    Создать вакансию
                                </div>
                            </a>
                        </div>
                        <div class="fw-ml-20">
                            <a href="#" class="fw-reset first-screen__button">
                                <i class="icon icon-create-vacancy"></i>
                                <div class="fw-ml-10">
                                    Создать вакансию
                                </div>
                            </a>
                        </div>
                    </div>
                </div>
                <div class="first-screen__form">
                    <div class="fw-mb-30 d-flex">
                        <div>
                            <a href="#" class="fw-color-white">Вход</a>
                        </div>
                        <div class="fw-color-white fw-ml-15 fw-mr-15">
                            |
                        </div>
                        <div>
                            <a href="#" class="fw-color-blue-light fw-text-underline">Регистрация</a>
                        </div>
                    </div>
                    <form action="#">
                        <div class="fw-mb-15">
                            <input class="fw-text-center col-12 fw-border-radius-7 fw-reset fw-bg-color-white fw-padding-8 fw-pl-15 fw-pr-15"
                                   type="text" placeholder="E-mail">
                        </div>
                        <div class="fw-mb-20">
                            <input class="fw-text-center col-12 fw-border-radius-7 fw-reset fw-bg-color-white fw-padding-10 fw-pl-15 fw-pr-15"
                                   type="password" placeholder="Пароль">
                        </div>
                        <div class="fw-mb-5">
                            <label class="fw-color-white d-flex align-items-center">
                                <span class="filled-checkbox filled-checkbox--white fw-fz-0">
                                    <input type="checkbox">
                                    <span class="filled-checkbox__detector"></span>
                                </span>
                                <span class="fw-ml-10">
                                    Запомнить меня
                                </span>
                            </label>
                        </div>
                        <div>
                            <a href="#" class="fw-color-blue-light fw-text-underline">Напомнить пароль</a>
                        </div>
                        <div class="fw-mt-25 fw-pt-30">
                            <button class="btn">Войти</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <div class="fw-pt-35 fw-pb-35">
        <div class="container">
            <div class="row">
                <div class="col-9">
                    <div class="block-title fw-mb-25">Новые вакансии</div>

                    <div class="row fw-mb-inverse-30">
                        {% for item in 1..15 %}
                            <div class="col-4 fw-mb-30">
                                {% include 'components/resume-preview.twig' %}
                            </div>
                        {% endfor %}
                    </div>
                </div>
                <div class="col-3">
                    <div class="block-title fw-mb-25">Работа в компаниях</div>
                    <div class="fw-mb-30">
                        <img src="images/promo/home-credit.jpg" class="fw-width-1-1" alt="">
                    </div>
                    <table class="fw-reset company-jobs-list fw-width-1-1">
                        {% for item in 1..10 %}
                            <tr class="fw-reset">
                                <td>
                                    <a href="#"
                                       class="d-flex justify-content-between fw-color-dark fw-text-decoration-none">
                                        Банк Хоум кредит
                                    </a>
                                </td>
                                <td class="fw-color-gray fw-width-0 fw-pt-6 fw-pb-6 company-jobs-list-number fw-text-center fw-pl-5 fw-pr-5">
                                    21
                                </td>
                            </tr>
                        {% endfor %}
                    </table>
                </div>
            </div>
        </div>
    </div>

    <div class="fw-pt-35 fw-pb-35 fw-bg-color-gray-light">
        <div class="container">
            <div class="row">
                <div class="col-9">
                    <div class="block-title fw-mb-25">Работа по профессиям</div>

                    <div class="row">
                        {% for item in 1..3 %}
                            <div class="col-4">
                                <ul class="fw-reset">
                                    <li class="fw-reset fw-mt-10 fw-mb-10">
                                        <a href="#" class="fw-reset link-marked fw-text-underline">
                                            Бухгалтерия, управленческий учет,
                                            финансы предприятия
                                        </a>
                                    </li>
                                    {% for i in 1..8 %}
                                        <li class="fw-reset fw-mt-10 fw-mb-10">
                                            <a href="#" class="fw-reset link-marked fw-text-underline">
                                                Бухгалтерия
                                            </a>
                                        </li>
                                    {% endfor %}
                                </ul>
                            </div>
                        {% endfor %}
                    </div>
                </div>
                <div class="col-3 fw-relative">
                    <div class="vacancies-block-full-height fw-reset">
                        <img src="images/promo/kfc.jpg" alt="">
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="fw-pt-35 fw-pb-35">
        <div class="container">
            <div class="block-title fw-mb-20">Новости</div>
            <div class="row">
                {% for i in 1..4 %}
                    <div class="col-3">
                        <a href="#" class="fw-reset d-flex align-items-center">
                            <div class="fw-width-100 fw-flex-shrink-no fw-mr-10">
                                <img src="http://placehold.it/100" alt="" class="fw-width-1-1">
                            </div>
                            <div class="fw-text-underline">
                                Lorem ipsum dolor sit amet, consectetur adipisicing elit. Ab, aspernatur.
                            </div>
                        </a>
                    </div>
                {% endfor %}
            </div>
        </div>
    </div>

    <!-- footer block -->
    {% include "layouts/footer.twig" %}
    <!-- footer block end -->
{% endblock %}