                                            <li>
                                                <a href="#" class="fw-reset fw-block fw-border-style-solid-bottom fw-border-width-1 fw-border-color-light-pale-yellow fw-pt-25 fw-pb-25">Наша история</a>
                                            </li>

                                            <li>
                                                <a href="#" class="fw-reset fw-block fw-border-style-solid-bottom fw-border-width-1 fw-border-color-light-pale-yellow fw-pt-25 fw-pb-25">Новости</a>
                                            </li>
                                        </ul>
                                    </div>
                                    <!-- #tab {{i}} -->
                                {% endfor %}
                                <div id="tab1" class="fixed-menu-tab-content fw-width-1-1">
                                    <ul class="fixed-menu-tab-content-menu fw-pl-0 fw-margin-0 fw-list-style-type fw-font-mr fw-color-white">
                                        <li class="fw-pointer">
                                            <a href="#" class="fw-reset fw-block fw-border-style-solid-bottom fw-border-width-1 fw-border-color-light-pale-yellow fw-pt-25 fw-pb-25">Хлебпром</a>
                                        </li>

