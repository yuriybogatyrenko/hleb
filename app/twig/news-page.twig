{% block content %}
    <!-- Header block -->
    {% include "layouts/header.twig" %}
    <!-- Header block end -->

    <div class="fw-pt-35 fw-pb-35">
        <div class="container">
            <div class="row">
                <div class="col-12 col-md-9">
                    <div class="fw-mb-35">
                        {% include 'components/breadcrumbs.twig' %}
                    </div>
                    <div class="fw-fz-36 fw-mb-30 fw-fz-24@xs">
                        Плюс пять миллионов резюме в январе!
                    </div>
                    <div class="fw-fz-0 fw-relative">
                        <img alt="" src="http://placehold.it/600x400" class="fw-width-1-1"/>
                        <div class="fw-bg-color-pink fw-color-white fw-fz-24 fw-text-300 fw-padding-5 fw-pt-10 fw-pb-10 fw-absolute fw-left-0 fw-top-0">
                            22/<span class="fw-fz-18">02</span>
                        </div>
                    </div>
                    <div class="content-area fw-mt-30 fw-pt-30">
